
# Application Configuration
NODE_ENV=development
PORT=5000
SESSION_SECRET=your-super-secret-key-change-in-production

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Admin SDK (for server-side)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your_project_id",...}

# Database Configuration
# Options: postgresql, mysql, sqlite
DATABASE_TYPE=postgresql

# PostgreSQL (default)
DATABASE_URL=postgresql://user:password@localhost:5432/ranch_manager

# MySQL alternative
# DATABASE_TYPE=mysql
# DATABASE_URL=mysql://user:password@localhost:3306/ranch_manager
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=password
# DB_NAME=ranch_manager

# SQLite alternative
# DATABASE_TYPE=sqlite
# SQLITE_FILE=ranch_manager.db

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_MAX_AGE=86400000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGINS=http://localhost:5000,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Weather API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key_here
